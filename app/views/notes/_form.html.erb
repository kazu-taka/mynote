<%= form_with model: note, local: true do |form| %>
  <div class="form-group">
    <%= form.label :title %><br>
    <%= form.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :body %><br>
    <%= form.text_area :body, class: "form-control", rows: 15 %>
  </div>
  <%= form.submit class: "btn btn-default" %>
<% end %>
